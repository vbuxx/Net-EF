@model DTS_EntityFrameworks.ViewModels.SelectFromList

<h4>Region</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Region.Id" />
            <div class="form-group">
                <label asp-for="@Model.Region.Name" class="control-label"></label>
                <input asp-for="@Model.Region.Name" class="form-control" />
                <span asp-validation-for="@Model.Region.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Region.DivisionId" class="control-label"></label>
                <select asp-for="@Model.Region.DivisionId" class="form-control" asp-items="@Model.Divisions">
                    <option value="@Model.Region.DivisionId"></option>
                </select>
                <span asp-validation-for="@Model.Region.DivisionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
